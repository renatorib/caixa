{
  "compilerOptions": {
    "target": "es5",
    "isolatedModules": true,
    "downlevelIteration": true,
    "strict": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
